
@page
@model LoginModel

@{
	ViewData["Title"] = "Login | TaskNexus";
}
@section Header {
}

<div class="login-container">
    <div class="login-inner-container">
        <div class="login-form">
            <div class="inner-container">
                <div class="header-text s3">ПАНЕЛЬ УПРАВЛЕНИЯ</div>
                <div class="header-text s5">АВТОРИЗАЦИЯ</div>
                <div class="inputs-container">
                    <input id="login-input" class="inputs" type="text" placeholder="ПОЧТА" name="uname" required>
                    <input id="password-input" class="inputs" type="password" placeholder="ПАРОЛЬ" name="psw" required>
                    <button onclick="login()" class="login-button"  type="submit">ВОЙТИ</button>
                    <button class="login-button" onclick="window.location.href='/Register'" id="register">
                        РЕГИСТРАЦИЯ
                    </button>
                </div>

                <div class="header-text s3 naming lh">TASK</br>NEXUS</div>

                <div class="circle" id="c1"></div>
                <div class="circle" id="c2"></div>
            </div>
        </div>
    </div>

</div>


@section Footer {
